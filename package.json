{
	"name": "macs-vscode-stuff",
	"displayName": "macs-vscode-stuff",
	"description": "Mac's VSCode stuff",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onLanguage:typescript",
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
    "unpublish": "rm -rf ~/.vscode/extensions/champgm.macs-vscode-stuff || true",
    "copy":"mkdir -p ~/.vscode/extensions/champgm.macs-vscode-stuff && rsync -avzh --exclude '.git' . ~/.vscode/extensions/champgm.macs-vscode-stuff",
    "publish": "npm run unpublish && npm run compile && npm run copy",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
